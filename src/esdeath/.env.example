# =============================================================================
# ClawdBot (OpenClaw) â€” Environment Template
# Copy to .env and fill in your values
# =============================================================================

# Gateway
OPENCLAW_GATEWAY_PORT=18789
OPENCLAW_BRIDGE_PORT=18790
OPENCLAW_GATEWAY_BIND=loopback
OPENCLAW_GATEWAY_TOKEN=<openssl rand -hex 32>
OPENCLAW_IMAGE=openclaw:local
OPENCLAW_CONFIG_DIR=./openclaw-data/config
OPENCLAW_WORKSPACE_DIR=./openclaw-data/workspace
OPENCLAW_CONFIG_PATH=/home/node/.openclaw/config/openclaw.json

# Model Provider
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5.2
# LLM Router (v2 profile): classifies requests and routes to Ollama or OpenAI
# Falls back to openai-router when llm-router is not running
OPENAI_BASE_URL=http://llm-router:8080/v1
# Direct passthrough (skip LLM routing):
# OPENAI_BASE_URL=http://openai-router:8080/v1

# TTS Backend
# OpenAI TTS (best quality, no voice cloning, uses API key):
TTS_UPSTREAM=openai
# Chatterbox (voice cloning, needs local GPU):
# TTS_UPSTREAM=chatterbox:8004
# XTTS v2 (voice cloning + Czech/Slovak, needs --profile xtts):
# TTS_UPSTREAM=xtts:8005
# Fish Speech (voice cloning, needs --profile fish-speech):
# TTS_UPSTREAM=tts-adapter:3100
# Kokoro (preset voices, needs --profile kokoro):
# TTS_UPSTREAM=kokoro-tts:8880

# Docker Model Runner (uncomment for local models)
# OPENAI_BASE_URL=http://model-runner.docker.internal/engines/llama.cpp/v1
# OPENAI_API_KEY=not-needed
# OPENAI_MODEL=ai/llama3.2:1B-Q8_0

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# Esdeath v2 Platform
# =============================================================================

# Claude API (LLM fallback)
ANTHROPIC_API_KEY=

# Audit logging - Telegram channel for read-only logs
TELEGRAM_LOG_CHANNEL_ID=

# Inter-container auth (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
TOOL_INTERNAL_SECRET=

# Stock market API (free tier from alphavantage.co)
ALPHA_VANTAGE_KEY=

# Daily cloud LLM spending limit (USD)
DAILY_BUDGET_USD=1.00
